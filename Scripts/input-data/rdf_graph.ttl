@prefix : <http://example.org/crepes#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <http://schema.org/> .

:Crepes rdf:type :Recipe ;
    schema:name "Crêpes" ;
    schema:servings "12 crêpes" ;
    schema:prepTime "1 hour" ;
    schema:totalTime "1 hour and 10 minutes" ;
    :hasInstruction :Step1, :Step2, :Step3, :Step4, :Step5, :Step6, :Step7, :Step8, :Step9 ;
    :requiresIngredient :Flour, :Eggs, :Milk, :Salt, :Oil ;
    :usesEquipment :MixingBowl, :Whisk, :Ladle, :CrepePan, :Plate .

# Ingredients
:Flour rdf:type :Ingredient ;
    schema:name "Flour" ;
    schema:quantity "250g" .

:Eggs rdf:type :Ingredient ;
    schema:name "Eggs" ;
    schema:quantity "2" .

:Milk rdf:type :Ingredient ;
    schema:name "Milk" ;
    schema:quantity "1/2 liter" .

:Salt rdf:type :Ingredient ;
    schema:name "Salt" ;
    schema:quantity "A pinch" .

:Oil rdf:type :Ingredient ;
    schema:name "Oil" ;
    schema:quantity "1 tablespoon" .

# Utensils
:MixingBowl rdf:type :Equipment ;
    schema:name "Mixing Bowl" ;
    schema:purpose "Holding ingredients for mixing" .

:Whisk rdf:type :Equipment ;
    schema:name "Whisk" ;
    schema:purpose "Mixing ingredients into a smooth batter" .

:Ladle rdf:type :Equipment ;
    schema:name "Ladle" ;
    schema:purpose "Pouring batter into the pan" .

:CrepePan rdf:type :Equipment ;
    schema:name "Crêpe Pan" ;
    schema:purpose "Cooking crêpes" .

:Plate rdf:type :Equipment ;
    schema:name "Plate" ;
    schema:purpose "Plating crêpes after cooking" .

# Steps
:Step1 rdf:type :Instruction ;
    schema:stepNumber 1 ;
    schema:duration "2 minutes" ;
    schema:text "Pour the flour into the mixing bowl." ;
    :resultantState "Flour is ready in the mixing bowl." ;
    :usesUtensil :MixingBowl .

:Step2 rdf:type :Instruction ;
    schema:stepNumber 2 ;
    schema:duration "1 minute" ;
    schema:text "Add the salt and create a well in the center." ;
    :resultantState "Well formed in the flour with salt." ;
    :usesUtensil :MixingBowl .

:Step3 rdf:type :Instruction ;
    schema:stepNumber 3 ;
    schema:duration "1 minute" ;
    schema:text "Add the eggs into the well." ;
    :resultantState "Eggs placed in the center of the flour." ;
    :usesUtensil :MixingBowl .

:Step4 rdf:type :Instruction ;
    schema:stepNumber 4 ;
    schema:duration "5 minutes" ;
    schema:text "Gradually mix while adding milk and oil until smooth batter is formed." ;
    :resultantState "Smooth and fluid batter achieved." ;
    :usesUtensil :MixingBowl, :Whisk .

:Step5 rdf:type :Instruction ;
    schema:stepNumber 5 ;
    schema:duration "1 hour" ;
    schema:text "Let the batter rest for 1 hour." ;
    :resultantState "Batter rested and ready for cooking." .

:Step6 rdf:type :Instruction ;
    schema:stepNumber 6 ;
    schema:duration "1 minute" ;
    schema:text "Pour a ladle of batter into a hot crêpe pan." ;
    :resultantState "Batter spread evenly in the crêpe pan." ;
    :usesUtensil :Ladle, :CrepePan .

:Step7 rdf:type :Instruction ;
    schema:stepNumber 7 ;
    schema:duration "30 seconds" ;
    schema:text "Spread the batter evenly and remove excess." ;
    :resultantState "Thin batter layer in the crêpe pan." ;
    :usesUtensil :CrepePan .

:Step8 rdf:type :Instruction ;
    schema:stepNumber 8 ;
    schema:duration "1 minute per side" ;
    schema:text "Cook each side of the crêpe for 1 minute." ;
    :resultantState "Golden-brown crêpes cooked on both sides." ;
    :usesUtensil :CrepePan .

:Step9 rdf:type :Instruction ;
    schema:stepNumber 9 ;
    schema:duration "0 minutes" ;
    schema:text "Serve and eat warm." ;
    :resultantState "Crêpes served and ready to eat." ;
    :usesUtensil :Plate .